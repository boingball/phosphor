<Application x:Class="RetroDisplay.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Global Resources -->
        <SolidColorBrush x:Key="RetroGreen" Color="#00ff00"/>
        <SolidColorBrush x:Key="RetroAmber" Color="#ffb000"/>
        <SolidColorBrush x:Key="RetroWhite" Color="#f0f0f0"/>
        <SolidColorBrush x:Key="DarkBackground" Color="#1a1a1a"/>

        <!-- Global Font -->
        <FontFamily x:Key="RetroFont">Consolas</FontFamily>
    </Application.Resources>
</Application>